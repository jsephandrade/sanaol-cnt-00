# Production-ready sample (update values for Hostinger)

DJANGO_SECRET_KEY=change-me-in-prod
DJANGO_DEBUG=0

# Hostnames and HTTPS origins
DJANGO_ALLOWED_HOSTS=your-domain.com,api.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://api.your-domain.com
DJANGO_CORS_ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com
FRONTEND_BASE_URL=https://your-domain.com

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email (use SMTP in production)
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DJANGO_EMAIL_HOST=localhost
DJANGO_EMAIL_PORT=587
DJANGO_EMAIL_USE_TLS=1
DJANGO_EMAIL_HOST_USER=
DJANGO_EMAIL_HOST_PASSWORD=
DJANGO_DEFAULT_FROM_EMAIL=no-reply@canteen.local
DJANGO_EMAIL_SUBJECT_PREFIX=[Canteen]

# Web push (required in production when DEBUG=0)
WEBPUSH_VAPID_PUBLIC_KEY=
WEBPUSH_VAPID_PRIVATE_KEY=
WEBPUSH_VAPID_SUBJECT=mailto:admin@canteen.local

# Database (MySQL 8)
DJANGO_DB_ENGINE=mysql
DJANGO_DB_NAME=technomart
DJANGO_DB_USER=tm_user
DJANGO_DB_PASSWORD=tm_password
DJANGO_DB_HOST=127.0.0.1
DJANGO_DB_PORT=3306
DJANGO_DB_CONN_MAX_AGE=60

# Redis for Channels / background workers (required for websockets)
REDIS_URL=redis://127.0.0.1:6379/0

# JWT configuration
DJANGO_JWT_SECRET=change-me-too
DJANGO_JWT_ALG=HS256
DJANGO_JWT_EXP_SECONDS=3600
DJANGO_JWT_REMEMBER_SECONDS=2592000
DJANGO_JWT_REFRESH_SECONDS=604800
DJANGO_JWT_REFRESH_REMEMBER_SECONDS=2592000

# Security / misc
DJANGO_DISABLE_INMEM_FALLBACK=0
DJANGO_PRIVATE_MEDIA_ROOT=backend/private_media
